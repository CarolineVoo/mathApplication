<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <!--   BACKGROUNDS   -->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_start"
        />


    <!-- TEXT FROM THE BOARD  -->
    <TextView
        android:id="@+id/textThisTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/textTask"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="4dp"
        android:textColor="@color/colorDarkOrange"
        android:textSize="15sp"
        android:textAlignment="center"
        android:text="0" />
    <TextView
        android:id="@+id/textTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorDarkOrange"
        android:textSize="15sp"
        android:textAlignment="center"
        android:text="@string/start_taskOf" />

    <TextView
        android:id="@+id/textNumberOfTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textTask"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:textColor="@color/colorDarkOrange"
        android:textSize="15sp"
        android:textAlignment="center"
        android:text="5" />

    <TextView
        android:id="@+id/textCalculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTask"
        android:layout_marginLeft="90dp"
        android:textStyle="bold"
        android:textColor="@color/colorNumberBrown"
        android:textSize="40sp"
        android:textAlignment="center"
        android:text="3 + 5 =" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTask"
        android:layout_marginTop="-9dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textCalculation"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        android:text="0"
        />

    <TextView
        android:id="@+id/textPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textCalculation"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorNumberBrown"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="@string/start_points" />

    <TextView
        android:id="@+id/textPlayerPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textCalculation"
        android:layout_toRightOf="@id/textPoints"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:textColor="@color/colorNumberBrown"
        android:textSize="17sp"
        android:textAlignment="center"
        android:text="0" />




    <!-- BUTTONS  -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
         >

        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="35dp"
            android:textColor="@color/colorNumberBrown"
            android:background="@drawable/shape"
            android:layout_height="80dp"
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="35dp"
            android:textColor="@color/colorNumberBrown"
            android:background="@drawable/shape"
            android:layout_height="80dp"
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="35dp"
            android:textColor="@color/colorNumberBrown"
            android:background="@drawable/shape"
            android:layout_height="80dp"
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="35dp"
            android:textColor="@color/colorNumberBrown"
            android:background="@drawable/shape"
            android:layout_height="80dp"
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            tools:ignore="OnClick"/>

        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="35dp"
            android:textColor="@color/colorNumberBrown"
            android:background="@drawable/shape"
            android:layout_height="80dp"
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            tools:ignore="OnClick"/>

        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="35dp"
            android:textColor="@color/colorNumberBrown"
            android:background="@drawable/shape"
            android:layout_height="80dp"
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            tools:ignore="OnClick"/>

        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="35dp"
            android:textColor="@color/colorNumberBrown"
            android:background="@drawable/shape"
            android:layout_height="80dp"
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            tools:ignore="OnClick"/>

        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="35dp"
            android:textColor="@color/colorNumberBrown"
            android:background="@drawable/shape"
            android:layout_height="80dp"
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            tools:ignore="OnClick"/>

        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="35dp"
            android:textColor="@color/colorNumberBrown"
            android:background="@drawable/shape"
            android:layout_height="80dp"
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            tools:ignore="OnClick"/>

        <Button
            android:id="@+id/clear"
            android:text="x"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/colorClear"
            android:background="@drawable/shape"
            android:layout_height="60dp"
            android:layout_width="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="buttonClear"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:textSize="35dp"
            android:textColor="@color/colorNumberBrown"
            android:background="@drawable/shape"
            android:layout_height="80dp"
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            tools:ignore="OnClick"/>

        <Button
            android:id="@+id/btnAnswer"
            android:text="V"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@drawable/btn_text_color_enabled"
            android:background="@drawable/shape"
            android:layout_height="60dp"
            android:layout_width="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:enabled="false"
            android:onClick="buttonAnswer"
            tools:ignore="OnClick" />


    </GridLayout>





</RelativeLayout>