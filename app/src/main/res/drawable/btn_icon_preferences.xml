<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="50dp" android:width="40dp">
        <shape android:shape="rectangle"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/colorIconOrange" />
            <stroke
                android:width="2px"
                android:color="@color/colorDarkOrange"
                />
            <corners android:bottomRightRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>


    <item android:left="0dp" android:width="1dp" android:height="50dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorDarkOrange" />
        </shape>
    </item>


    <item android:drawable="@drawable/ic_menu_preferences"
        android:height="25dp"
        android:width="25dp"
        android:gravity="center_vertical|center_horizontal"/>
</layer-list>